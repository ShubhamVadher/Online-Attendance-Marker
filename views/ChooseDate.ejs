<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Check Attendance</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

    <!-- Main Container -->
    <div class="max-w-2xl mx-auto mt-20 bg-white shadow-lg rounded-lg p-6">
        <h1 class="text-2xl font-bold text-gray-800 text-center mb-6">Attendance Records</h1>

        <!-- Subject Info -->
        <div class="mb-6">
            <p class="text-lg font-medium text-gray-700">
                <span class="font-bold">Subject Name:</span> <%= subject.name %>
            </p>
            <p class="text-lg font-medium text-gray-700">
                <span class="font-bold">Subject ID:</span> <%= subject._id %>
            </p>
        </div>

        <!-- Attendance Dates -->
        <div class="bg-gray-50 p-4 rounded-lg shadow">
            <h2 class="text-lg font-semibold text-gray-700 mb-4">Class Dates</h2>
            <ul class="list-disc list-inside space-y-2">
                <% if (subject.class_details && subject.class_details.length > 0) { %>
                    <% subject.class_details.forEach((dates) => { %>
                        <li class="text-gray-600">
                            <a href="/prof/checkdate/<%=subject._id%>/<%=dates._id%>"><%= new Date(dates.date).toLocaleDateString("en-US", { year: "numeric", month: "long", day: "numeric" }) %></a>
                        </li>
                    <% }) %>
                <% } else { %>
                    <p class="text-gray-500">No classes have been held for this subject yet.</p>
                <% } %>
            </ul>
        </div>
        

        <!-- Back Button -->
        <div class="mt-6 text-center">
            <a href="/prof/profile/<%=subject.prof_created._id%>" class="bg-indigo-500 text-white py-2 px-4 rounded-lg hover:bg-indigo-600 transition">
                Back to Dashboard
            </a>
        </div>

    </div>

</body>
</html>
